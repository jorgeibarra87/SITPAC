{% extends '::frontendg.html.twig' %}

{% block title %}Ver mas Servicio Alimentacion{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadag') }}">Portada Gerente</a></li>
    <li><a href="{{ path('paquete_verdetallesogerente',{'id':paquete.idpaqueteTuristico}) }}">Detalles Paquete</a></li>
    <li class="active">Ver mas Servicio Alimentacion</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}


 {% for servicioalim in servicioalim %}


<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{servicioalim.nombre}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/alimentacion/' ~ servicioalim.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ servicioalim.nombre }}</h3>
            <p><B>Tipo de Servicio:</B> {{ servicioalim.tipo }}</p>
            <p><B>Hora:</B> {{ servicioalim.hora|date("g:ia") }}</p>              
            <p><B>Direccion:</B> {{ servicioalim.direccion }}</p>
            <p><B>Detalles:</B> {{ servicioalim.detalles }}</p>
            <p><B>Fecha de Creacion:</B> {{ servicioalim.fechaCreacion|date("m/d/Y") }}</p>
            <p><B>Precio:</B> ${{ servicioalim.precio|number_format( 0,'', '.') }}</p>              
          
      </div>
   </div>
 </div>
{% endfor %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

