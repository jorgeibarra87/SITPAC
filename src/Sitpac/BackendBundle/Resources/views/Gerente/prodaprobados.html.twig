{% extends '::frontendg.html.twig' %}

{% block title %}Productos Aprobados{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadag') }}">Portada Gerente</a></li>
        <li class="active ">Productos Aprobados </li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

        
            <div class="col-xs-12 bg-primary" >
            <h2>TODOS LOS PRODUCTOS APROBADOS:</h2>
            </div>
                                           
              {% if proda %}
              <div class="row">                

                  {% for proda in proda %}
                  <div class="col-xs-12 col-sm-3 ">
                   <div class="thumbnail">
                      <img src="{{ asset('uploads/images/' ~ proda.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 " style="height: 180px;">
                            <h3>{{ proda.nombre }}</h3>
                            <p>{{ proda.descripcion[0:150] }}...</p>
                        <p> 
                         <a href="{{ path('producto_gerente_verdetalles', { 'id': proda.idproducto }) }}" class="btn btn-primary"> Ver Detalles </a>                                                          
                        </p> 
                   </div>
                 </div>
                 {% endfor %}                     
              </div>
            {% endif %}
<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>           


{% endblock %}

