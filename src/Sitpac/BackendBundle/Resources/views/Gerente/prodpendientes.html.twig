{% extends '::frontendg.html.twig' %}

{% block title %}Productos Pendientes{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadag') }}">Portada Gerente</a></li>
        <li class="active ">Productos Pendientes</li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

        
            <div class="col-xs-12 bg-primary" >
            <h2>TODOS LOS PRODUCTOS PENDIENTES:</h2>
            </div>
                                           
              {% if prodp %}
              <div class="row">                

                  {% for prodp in prodp %}
                  <div class="col-xs-12 col-sm-3 ">
                   <div class="thumbnail">
                      <img src="{{ asset('uploads/images/' ~ prodp.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 " style="height: 180px;">
                      <div class="caption">
                            <h3>{{ prodp.nombre }}</h3>
                            <p>{{ prodp.descripcion[0:150] }}...</p>
                        <p> 
                         <a href="{{ path('producto_gerente_verdetalles', { 'id': prodp.idproducto }) }}" class="btn btn-primary"> Ver Detalles </a>
                         <a href="{{ path('producto_aprobar', { 'id': prodp.idproducto }) }}" class="btn btn-success" onclick="return confirm('Â¿Esta seguro que desea cambiar el estado del producto?');"> Aprobar Producto </a>         
                        </p> 
                      </div>
                   </div>
                 </div>
                 {% endfor %}                     
              </div>
            {% endif %}
<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>           


{% endblock %}

