{% extends '::frontenda.html.twig' %}

{% block title %}Administracion Servicios Excursion{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadaa') }}">Home</a></li>
        <li class="active ">Administracion Servicios Paquete Excursion </li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

        
            <div class="col-xs-12 bg-primary" >
            <h2>Administracion Servicios Paquete Excursion:</h2> 
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
                                          
              {% if serviciospexcursion %}
              <div class="row">                

                  <a href="#" class="btn btn-lg btn-success"> Crear Nuevo</a>
                  <br>
                  <br>
                  <br>

                    
                    <table class="table table-striped">

                      <thead>
                        <tr class="info">
                          <th>Nombre</th>
                          <th>Precio Servicio</th>
                          <th>Producto</th>
                          <th>Duracion</th>
                          <th>Acciones</th>
                        </tr>
                      </thead>

                      <tbody>
                        {% for serviciospexcursion in serviciospexcursion %}
                        <tr>
                          <td>{{ serviciospexcursion.nombre }}</td>
                          <td>${{ serviciospexcursion.precioservicio|number_format( 0,'', '.') }}</td>
                          <td>{{ serviciospexcursion.idproducto}}</td>
                          <td>{{ serviciospexcursion.duracion}}</td>
                          
                          <td>
                           <a href="#" class="btn btn-sm btn-success"> Ver</a>
                           <a href="#" class="btn btn-sm btn-primary"> Editar</a>
                           <a href="#" class="btn btn-sm btn-danger"> Borrar</a>
                          </td>
                        </tr>
                        {% endfor %}
                      </tbody>
                      </table>
              </div>
              {% endif %}                     

</div>




{% endblock %}
