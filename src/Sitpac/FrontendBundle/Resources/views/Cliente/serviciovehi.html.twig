{% extends '::frontend.html.twig' %}

{% block title %}Ver mas Servicio Vehiculo{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portada') }}">Portada</a></li>
    <li><a href="{{ path('paquete_verdetalles_cliente',{'id':paquete.idpaqueteTuristico}) }}">Detalles Paquete</a></li>
    <li class="active">Ver mas Servicio Vehiculo</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}


 {% for serviciovehi in serviciovehi %}


<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{serviciovehi.tipo}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/vehiculo/' ~ serviciovehi.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ serviciovehi.tipo }}</h3>
            <p><B>Conductor:</B> {{ serviciovehi.chofer }}</p>
            <p><B>Modelo del Vehiculo:</B> {{ serviciovehi.modelo }}</p>              
            <p><B>Placa del Vehiculo:</B> {{ serviciovehi.placa }}</p>
            <p><B>Origen:</B> {{ serviciovehi.origen }}</p>
            <p><B>Destino:</B> {{ serviciovehi.destino }}</p>
            <p><B>Precio:</B> ${{ serviciovehi.precio|number_format( 0,'', '.') }}</p>
            <p><B>Detalles:</B> {{ serviciovehi.detalles }}</p>
            <p><B>Fecha de Creacion:</B> {{ serviciovehi.fechaCreacion|date("m/d/Y") }}</p>              
          
      </div>
   </div>
 </div>
{% endfor %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

