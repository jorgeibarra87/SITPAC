{% extends '::frontend.html.twig' %}

{% block title %}Mis Paquetes Aprobados/Rechazados{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portada') }}">Portada</a></li>
        <li class="active ">Mis Paquetes Aprobados/Rechazados</li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}


              {% if paquetesa == null %}

            <div class="col-xs-12 bg-info" >
            <h2>No se encontraron paquetes aprobados.</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            {% endif %}

            {% if paquetesr == null %}

            <div class="col-xs-12 bg-info" >
            <h2>No se encontraron paquetes rechazados.</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
            {% endif %}  


              {% if paquetesa %}

              <div class="col-xs-12 bg-primary" >
            <h2>MIS PAQUETES APROBADOS:</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>

              <div class="row">                

                  {% for paquetesa in paquetesa %}
                  <div class="col-xs-12 col-sm-4">
                     <div class="thumbnail" >
                        <div class="caption">
                              <h3>{{ paquetesa.nombre }}</h3>
                              <p  align="justify"><B>Descripcion:</B> {{ paquetesa.descripcion[0:100] }}...</p>
                              <p><B>Estado:</B> {{ paquetesa.estado }}</p>
                            <p>
                            <a href="{{ path('paquete_verdetalles_cliente', { 'id': paquetesa.idpaqueteTuristico }) }}" class="btn btn-primary"> Ver Detalles </a>
                            <a href="#" class="btn btn-success"> Reservar </a>
                            </p>
                        </div>
                     </div>
                   </div>
                  {% endfor %}
              </div>
              {% endif %} 

               {% if paquetesr %}

              <div class="col-xs-12 bg-primary" >
            <h2>MIS PAQUETES RECHAZADOS:</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>

              <div class="row">                

                  {% for paquetesr in paquetesr %}
                  <div class="col-xs-12 col-sm-4">
                     <div class="thumbnail" >
                        <div class="caption">
                              <h3>{{ paquetesr.nombre }}</h3>
                              <p  align="justify"><B>Descripcion:</B> {{ paquetesr.descripcion[0:100] }}...</p>
                              <p><B>Estado:</B> {{ paquetesr.estado }}</p>
                            <p>
                            <a href="{{ path('paquete_verdetalles_cliente', { 'id': paquetesr.idpaqueteTuristico }) }}" class="btn btn-primary"> Ver Detalles </a>
                            <a href="#" class="btn btn-success"> Reservar </a>
                            </p>
                        </div>
                     </div>
                   </div>
                  {% endfor %}
              </div>
              {% endif %}                     
<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

