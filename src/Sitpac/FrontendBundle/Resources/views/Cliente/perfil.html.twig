{% extends '::frontend.html.twig' %}

{% block title %}Mi Perfil{% endblock %}



{% block article %}




<div class="container sha well text-center ">

  <ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portada') }}">Portada</a></li>
    <li class="active">Mi Perfil</li>
  </ol>

<h1 class="bg-primary"><i class="fa fa-list-alt"></i> Ver / Modificar mis datos </h1>  

<form class="form-horizontal" action="{{ path('cliente_perfil') }}" method="post" {{
form_enctype(formulario) }}>
    {{ form_errors(formulario) }}

    {% for mensaje in app.session.flashbag.get('info') %}
      <p class="info">{{ mensaje }}</p>
    {% endfor %}
<div class="row col-sm-12">
  <div class="row col-sm-6">

    <fieldset>
    <legend> <i class="fa fa-hand-o-down"></i> Datos personales:</legend>
    

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.nombres) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.nombres, 'Nombre:') }}</div>
      <div class="col-sm-8">
         {{ form_widget(formulario.nombres, {'attr': {'class': 'form-control', 'placeholder': 'Digite su nombre'}})  }}
      </div>
    </div>


    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.apellidos) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.apellidos, 'Apellidos:') }}</div>
      <div class="col-sm-8">
         {{ form_widget(formulario.apellidos, {'attr': {'class': 'form-control', 'placeholder': 'Digite sus apellidos'}})  }}
      </div>
    </div>


    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.direccion) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.direccion, 'Dirección:') }}</div>
      <div class="col-sm-8">

         {{ form_widget(formulario.direccion, {'attr': {'class': 'form-control', 'placeholder': 'Digite su dirección'}})  }}
      </div>
    </div>

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.telefono) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.telefono, 'Telefono:') }}</div>
      <div class="col-sm-8">     
         {{ form_widget(formulario.telefono, {'attr': {'class': 'form-control', 'placeholder': 'Digite su telefono'}})  }}
      </div>
    </div>

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.nacionalidad) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.nacionalidad, 'Nacionalidad:') }}</div>
      <div class="col-sm-8">
         {{ form_widget(formulario.nacionalidad, {'attr': {'class': 'form-control', 'placeholder': 'Digite su nacionalidad'}})  }}
      </div>
    </div>

     <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.empresa) }}</div>
      <div class="col-sm-4 control-label" >{{ form_label(formulario.empresa, 'Empresa:') }}</div>
      <div class="col-sm-8">
         {{ form_widget(formulario.empresa, {'attr': {'class': 'form-control', 'placeholder': 'empresa'}})  }}
      </div>
    </div>
    </fieldset>
  </div>

<div class="row col-sm-6">
    <fieldset>
    <legend> <i class="fa fa-hand-o-down"></i> Datos de acceso:</legend>

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.email) }}</div>
      <div class="col-sm-5 control-label">{{ form_label(formulario.email, 'Email:') }}</div>
      <div class="col-sm-7">
        {{ form_widget(formulario.email, {'attr': {'class': 'form-control', 'placeholder': 'Digite su correo'}})  }}
      </div>
    </div>

  
    <div class="form-group">
      <div class="bg-danger ">{{ form_errors(formulario.password.Password) }}</div>
    <div class="col-sm-5 control-label">{{ form_label(formulario.password.Password, 'Contraseña:') }}</div>
      <div class="col-sm-7">
        {{ form_widget(formulario.password.Password, {'attr': {'class': 'form-control', 'placeholder': 'cambiar o dejar vacia para mantener (mínimo 6 caracteres)'}})  }}
      </div>
    </div>

    <div class="form-group">
      <div class="bg-danger ">{{ form_errors(formulario.password.Repita_password) }}</div>
    <div class="col-sm-5 control-label">{{ form_label(formulario.password.Repita_password, 'Repita su contraseña:') }}</div>
      <div class="col-sm-7">
        {{ form_widget(formulario.password.Repita_password, {'attr': {'class': 'form-control', 'placeholder': 'Repita su contraseña'}})  }}
      </div>
    </div>

    <div class="form-group">
    <div class="col-sm-5 control-label">{{ form_label(formulario.permiteEmail, 'Permitir correos promocionles:') }}</div>
    <div class=" col-sm-1">
      <div class="checkbox">
        <label>
          {{ form_widget(formulario.permiteEmail)  }}
        </label>
      </div>
    </div>
  </div>
    </fieldset>

  </div>
</div>
    <div class="form-group">
    <div class="col-sm-offset-6 col-sm-6">
       <input class="btn btn-lg btn-primary " type="submit" name="" value="  Guardar cambios  " />
    </div>
  </div>

  {{ form_rest(formulario) }}

</form>

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

