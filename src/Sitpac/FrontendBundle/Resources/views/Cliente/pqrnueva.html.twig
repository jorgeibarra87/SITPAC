{% extends '::frontend.html.twig' %}

{% block title %}PQR nueva{% endblock %}



{% block article %}


<div class="container sha well ">
 <ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
    <li class="active">PQR nueva</li>
  </ol>


<div class="col-sm-12 ">
<h2 class="bg-primary text-center"><i class="fa fa-pencil-square-o"></i> Crear PQR:</h2>
</div>


<div class="col-sm-12 ">
<form class="form-horizontal" action="{{ path('pqr_nueva') }}" method="post" {{ form_enctype(formulario) }}>
    {{ form_errors(formulario) }}


    <fieldset>

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.tipo) }}</div>
      <div class="col-sm-3 control-label" >{{ form_label(formulario.tipo, 'Elija (Petición, Queja o Reclamo):') }}</div>
      <div class="col-sm-6">
         {{ form_widget(formulario.tipo, {'attr': {'class': 'form-control', 'placeholder': 'Elija (Petición, Queja o Reclamo)'}})  }}
      </div>
    </div> 

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.descripcion) }}</div>
      <div class="col-sm-3 control-label" >{{ form_label(formulario.descripcion, 'Descripcion de PQR:') }}</div>
      <div class="col-sm-6">
         {{ form_widget(formulario.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'describa detalladamente su Petición, Queja o Reclamo'}})  }}
         <p class="bg-info ">describa detalladamente su Petición, Queja o Reclamo.</p>
      </div>
    </div>
    </fieldset>
    <br>

   
    <div class="form-group">
    <div class="col-sm-offset-6 col-sm-6">
       <input class="btn btn-lg btn-primary " type="submit" name="" value="  Enviar PQR "  onclick="return confirm('¿Esta seguro que desea enviar esta PQR?');" />
    </div>
  </div>

  {{ form_rest(formulario) }}

</form>
</div>
<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>

{% endblock %}



