{% extends '::frontend.html.twig' %}

{% block title %}facturas{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadaa') }}">Home</a></li>
        <li class="active ">facturas</li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

        
            <div class="col-xs-12 bg-primary" >
            <h2>Factura:</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
                                          
              {% if facturas %}
              <div class="row">                

                   <a href="#" class="btn btn-lg btn-success"> Crear Nuevo</a>
                  <br>
                  <br>
                  <br>

                    
                    <table class="table table-striped">

                      <thead>
                        <tr class="info">
                          <th>Valor</th>
                          <th>Iva</th>
                          <th>Total</th>
                        </tr>
                      </thead>

                      <tbody>
                        {% for facturas in facturas %}
                        <tr>
                          <td>{{ facturas.valor|number_format( 0,'', '.') }}</td>
                          <td>${{ facturas.iva|number_format( 0,'', '.') }}</td>
                          <td>{{ facturas.total|number_format( 0,'', '.') }}</td>
                       </tr>
                        {% endfor %}
                      </tbody>
                      </table>
              </div>
              {% endif %}                     

</div>




{% endblock %}
