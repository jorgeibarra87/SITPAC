{% extends '::frontend.html.twig' %}

{% block title %}Ver Todas las PQR{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
    <li class="active">Ver Todas las PQR</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}




{% if peticiones %}
              <div class="row">

                  <div class="col-xs-12 bg-primary">
                  <h3>Mis PQRs creadas:</h3>
                  </div> 
                  

            
                  {% for peticiones in peticiones %}
                  <div class="col-xs-12 col-sm-3  ">
                     <div class="thumbnail">
                        <div class="caption">
                              <h4><strong>Tipo de PQR:</strong> {{ peticiones.tipo }}</h4>
                              <p><B>Fecha:<br></B> {{ peticiones.fecha|date("d/m/Y") }}</p>
                            <p>
                            <a href="{{ path('vermas_pqr', {'id': peticiones.idpqr }) }}" class="btn btn-success"> Ver </a>         
                            </p>
                        </div>
                     </div>
                   </div>
                  {% endfor %}
              </div>
              {% endif %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

