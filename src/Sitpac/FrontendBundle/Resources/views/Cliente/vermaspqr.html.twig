{% extends '::frontend.html.twig' %}

{% block title %}Ver Mas PQR{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portada') }}">Portada</a></li>
    <li><a href="{{ path('ver_todaspqr') }}">Ver Todas las PQR</a></li>
    <li class="active">Ver Mas PQR</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}




{% if peticion %}
              <div class="row">

                  <div class="col-xs-12 bg-primary">
                  <h3>Ver mas PQR:</h3>
                  </div> 
                  

                  <div class="col-xs-12 col-sm-6  ">
                     <div class="thumbnail">
                        <div class="caption">
                            <h4><strong>PQR :</strong></h4>
                            <h4><strong>Tipo :</strong> {{ peticion.tipo }}</h4>
                            <p><strong>Fecha:</strong> {{ peticion.fecha|date("d/m/Y") }}</p>
                            <p><strong>Descripcion:</strong> {{ peticion.descripcion }}</p>
                            <p><strong>Respuesta:</strong> {{ peticion.respuesta }}</p>
                            <p><strong>Estado:</strong> {{ peticion.estado }}</p>
                        </div>
                     </div>
                   </div>
              </div>
{% endif %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

