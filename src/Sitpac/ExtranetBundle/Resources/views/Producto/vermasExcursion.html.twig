{% extends '::frontendp.html.twig' %}

{% block title %}Ver mas Servicio Excursion{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
    <li><a href="{{ path('producto_verdetalles', { 'id': producto.idproducto }) }}">Detalles Producto</a></li>
    <li class="active">Ver mas Servicio Excursion</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}



<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{excursion.nombre}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/excursion/' ~ excursion.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ excursion.nombre }}</h3>
            <p><B>Tipo de Servicio:</B> {{ excursion.tipo }}</p>
            <p><B>Detalles:</B> {{ excursion.detalles }}</p>
            <p><B>Precio:</B> ${{ excursion.precio }}</p>           
            <p><B>Fecha de Creacion:</B> {{ excursion.fechaCreacion|date("m/d/Y") }}</p>
          
      </div>
   </div>
 </div>

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

