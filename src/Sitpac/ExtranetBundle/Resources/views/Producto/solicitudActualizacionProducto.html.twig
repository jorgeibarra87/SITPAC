{% extends '::frontendp.html.twig' %}

{% block title %}Solicitud de actualizacion de producto{% endblock %}



{% block article %}


<div class="container sha well ">

 <ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
    <li><a href="{{  path('actualizar_retirar_producto') }}">Actualizar Retirar Producto</a></li>
    <li class="active">Solicitud Actualizacion Producto</li>
  </ol>


<div class="col-sm-12 text-left ">
<div class="col-sm-2 thumbnail" ><img src="{{ asset('uploads/images/' ~ producto.foto) }}" /></div>
<h4> Tipo de Producto : {{producto.tipoProducto}} </h4> <h4> Nombre : {{producto.nombre}} </h4> <h6> Descripcion : {{producto.descripcion}} </h6>
</div>

<div class="col-sm-12 ">
<h2 class="bg-primary text-center"><i class="fa fa-pencil-square-o"></i> Crear Solicitud de Actualizacion de Producto:</h2>
</div>


<div class="col-sm-12 ">
<form class="form-horizontal" action="{{ path('actualizar_producto', {'id': producto.idproducto }) }}" method="post" {{ form_enctype(formulario) }}>
    {{ form_errors(formulario) }}


    <fieldset>
    <legend class="text-center"> <i class="fa fa-pencil-square-o"></i> Solicitud Nueva:</legend>
    

    <div class="form-group">
      <div class="bg-danger">{{ form_errors(formulario.descripcion) }}</div>
      <div class="col-sm-3 control-label" >{{ form_label(formulario.descripcion, 'Descripcion de Actualizacion:') }}</div>
      <div class="col-sm-6">
         {{ form_widget(formulario.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'describa detalladamente lo que quiere actulizar en su producto.'}})  }}
         <p class="bg-info ">describa detalladamente lo que quiere actualizar en su producto.</p>
      </div>
    </div>
    </fieldset>

   
    <div class="form-group">
    <div class="col-sm-offset-7 col-sm-12">
       <input class="btn btn-lg btn-primary " type="submit" name="" value="  Crear Solicitud  " />
    </div>
  </div>

  {{ form_rest(formulario) }}

</form>
</div>
<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>

{% endblock %}



