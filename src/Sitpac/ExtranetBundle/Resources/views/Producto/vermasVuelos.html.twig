{% extends '::frontendp.html.twig' %}

{% block title %}Ver mas Servicio Vuelo{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
    <li><a href="{{  path('actualizar_retirar_producto') }}">Actualizar Retirar Producto</a></li>
    <li><a href="{{ path('actualizar_retirar_servicios', { 'id': producto.idproducto }) }}">Actualizar Retirar Servicios</a></li>
    <li class="active">Ver mas Servicio Vuelo</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}



<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{vuelo.compania}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/vuelo/' ~ vuelo.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ vuelo.compania }}</h3>
            <p><B>Fecha de Vuelo:</B> {{ vuelo.fecha|date("m/d/Y") }}</p>
            <p><B>Origen:</B> {{ vuelo.origen }}</p>
            <p><B>Hora de Salida:</B> {{ vuelo.horaSalida|date("g:ia") }}</p>              
            <p><B>Destino:</B> {{ vuelo.destino }}</p>
            <p><B>Categoria:</B> {{ vuelo.categoria }}</p>
            <p><B>Precio:</B> ${{ vuelo.precio }}</p>
            <p><B>Detalles:</B> {{ vuelo.detalles }}</p>
            <p><B>Fecha de Creacion:</B> {{ vuelo.fechaCreacion|date("m/d/Y") }}</p>
          
      </div>
   </div>
 </div>

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

