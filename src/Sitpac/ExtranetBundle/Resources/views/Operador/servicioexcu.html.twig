{% extends '::frontendo.html.twig' %}

{% block title %}Ver mas Servicio Excursion{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadao') }}">Portada Operador</a></li>
    <li><a href="{{ path('paquete_verdetalles',{'id':paquete.idpaqueteTuristico}) }}">Detalles Paquete</a></li>
    <li class="active">Ver mas Servicio Excursion</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}


 {% for servicioexcu in servicioexcu %}


<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{servicioexcu.nombre}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/excursion/' ~ servicioexcu.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ servicioexcu.nombre }}</h3>
            <p><B>Tipo de Servicio:</B> {{ servicioexcu.tipo }}</p>
            <p><B>Detalles:</B> {{ servicioexcu.detalles }}</p>
            <p><B>Precio:</B> ${{ servicioexcu.precio|number_format( 0,'', '.') }}</p>
            <p><B>Fecha de Creacion:</B> {{ servicioexcu.fechaCreacion|date("m/d/Y") }}</p>              
          
      </div>
   </div>
 </div>
{% endfor %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

