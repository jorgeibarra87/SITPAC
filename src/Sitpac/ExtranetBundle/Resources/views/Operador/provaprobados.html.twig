{% extends '::frontendo.html.twig' %}

{% block title %}Proveedores Aprobados{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadao') }}">Paquetes recientes</a></li>
        <li class="active ">Proveedores Aprobados</li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

        
            <div class="col-xs-12 bg-primary" >
            <h2>TODOS LOS PROVEEDORES APROBADOS:</h2>
            </div>
            <br>
            <br>
            <br>
            <br>
            <br>
                                           
              {% if prova %}
              <div class="row">                

                  {% for prova in prova %}
                  <div class="col-xs-12 col-sm-3">
                     <div class="thumbnail" >
                        <div class="caption">
                              <h3>PROVEEDOR:<BR> {{ prova.nombres }} {{ prova.apellidos }}</h3>
                              <p>Empresa: {{ prova.empresa }}</p>
                              <p>Direccion: {{ prova.direccion }}</p>
                              <p>Telefono: {{ prova.telefono }}</p>
                              <p>Fax: {{ prova.fax }}</p>
                              <p>Correo: {{ prova.email }}</p>
                              <p>Fecha de Registro: {{ prova.fechaAlta|date("m/d/Y") }}</p>
                              <p>Estado: {{ prova.estado }}</p>
                        </div>
                     </div>
                   </div>
                  {% endfor %}
              </div>
              {% endif %}                     

</div>




{% endblock %}

