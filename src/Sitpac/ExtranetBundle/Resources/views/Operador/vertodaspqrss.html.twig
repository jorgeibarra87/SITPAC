{% extends '::frontendo.html.twig' %}

{% block title %}PQRs Solicitadas{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadao') }}">Portada Operador</a></li>
    <li class="active">PQRs Solicitadas</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}

<div class="col-xs-12 bg-primary">
<h3>PQRs Solicitadas:</h3>
</div>


{% if peticiones %}
              <div class="row">                 
            
                  {% for peticiones in pagpeticiones %}
                  <div class="col-xs-12 col-sm-3  ">
                     <div class="thumbnail">
                        <div class="caption">
                              <h4><strong>Tipo de PQR:</strong> {{ peticiones.tipo }}</h4>
                              <p><B>Fecha:<br></B> {{ peticiones.fecha|date("d/m/Y") }}</p>
                              <p><strong>Cliente: </strong>{{ peticiones.clientecliente.nombres }} {{ peticiones.clientecliente.apellidos }}</p>
                            <p>
                            <a href="{{ path('vermas_pqro', {'id': peticiones.idpqr }) }}" class="btn btn-primary"> Ver </a>
                            <a href="{{ path('respuesta_pqr', {'id': peticiones.idpqr }) }}" class="btn btn-success"> Responder y Cambiar Estado </a>         
                            </p>
                        </div>
                     </div>
                   </div>
                  {% endfor %}
                  <div class="col-sm-12  text-center ">
                  {{ knp_pagination_render(pagpeticiones) }}
                  </div>
              </div>
              {% endif %}

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

