{% extends '::frontendo.html.twig' %}

{% block title %}Ver mas Servicio Alojamiento{% endblock %}



{% block article %}

<div class="container sha well ">

<ol class="breadcrumb text-left alert alert-success">
    <li><a href="{{ path('portadao') }}">Portada Operador</a></li>
    <li class="active">Ver mas Servicio Alojamiento</li>
  </ol>

 
{% for mensaje in app.session.flashbag.get('info') %}
    <p class="bg-warning">{{ mensaje }}</p>
{% endfor %}



<div class="col-xs-12 col-sm-9 bg-primary">
<h2>Servicio: {{alojamiento.tipoAlojamiento}}</h2>
</div>



<div class="col-xs-12 ">
   <div class="thumbnail">
      <img src="{{ asset('uploads/images/alojamiento/' ~ alojamiento.foto) }}" alt="imagen" class="img-thumbnail col-xs-12 col-sm-5">
      <div class="caption">

            <h3>{{ alojamiento.tipoAlojamiento }}</h3>
            <p><B>Codigo del Servicio:</B> {{ alojamiento.codigoAlojamiento }}</p>
            <p><B>Tipo de Servicio:</B> {{ alojamiento.tipoAlojamiento }}</p>
            <p><B>Precio:</B> ${{ alojamiento.precio }}</p>              
            <p><B>Detalles:</B> {{ alojamiento.detalles }}</p>
            <p><B>Fecha de Creacion:</B> {{ alojamiento.fechaCreacion|date("m/d/Y") }}</p>
          
      </div>
   </div>
 </div>

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>
</div>




{% endblock %}

