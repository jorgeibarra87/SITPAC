{% extends '::frontendp.html.twig' %}

{% block title %}Detalles Reserva{% endblock %}



{% block article %}


<div class="container sha well ">


     <ol class="breadcrumb text-left alert alert-success">
        <li><a href="{{ path('portadap') }}">Portada Proveedor</a></li>
        <li class="active ">Reservas de Servicios</li>
      </ol>


    {% for mensaje in app.session.flashbag.get('info') %}
        <p class="bg-warning">{{ mensaje }}</p>
    {% endfor %}

<div class="row col-sm-12 ">

<div class="col-sm-12 bg-primary" >
<h2>RESERVAS DE SERVICIOS:</h2> 
</div>
<table class="table table-striped">

  <thead>
    <tr class="success">
      <th>Nombre Producto</th>
      <th>Nombre Servicio</th>
      <th>Detalles Servicio</th>
      <th>Duracion</th>
      <th>Fecha Inicio</th>
      <th>Fecha Fin</th>
      <th>Descuento</th>
      <th>Precio Servicio</th>
      <th>Acciones</th>
    </tr>
   </thead>

  <tbody>
    {% for reservas in reservas %}
    <tr>
      <td>{{ reservas.nombreProducto }}</td>
      <td>{{ reservas.nombreServicio }}</td>
      <td  align="justify">{{ reservas.detalles[0:30] }}...</td>
      <td>{{ reservas.duracion }}</td>
      <td>{{ reservas.fechaInicio|date("m/d/Y") }}</td>
      <td>{{ reservas.fechaFin|date("m/d/Y") }}</td>
      <td>{{ reservas.descuento }}</td>
      <td>${{ reservas.precioServicio|number_format( 0,'', '.') }}</td>
      <td>
        <a href="{{ path('detalles_reservaservicios', { 'id': reservas.idReserva.idreserva }) }}" class="btn btn-sm btn-success"> Ver Detalles</a>
      </td>    
    </tr>
    {% endfor %}
  </tbody>
  </table>

</div> 

<a href="javascript:history.go(-1)" class="col-sm-12 text-center"><i class="fa fa-reply"></i> Regresar</a>

</div>

{% endblock %}